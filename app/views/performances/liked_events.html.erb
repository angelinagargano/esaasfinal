<h2 class="mb-4 text-center">My Liked Events</h2>

<% if @events.any? %>
  <!-- Events Grid -->
  <div class="container mt-4">
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100" data-event-id="<%= event.id %>">
            
            <!-- Card Body -->
            <div class="card-body">
              <!-- Title + Like/Dislike buttons -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0"><%= event.name %></h5>
                <div class="d-flex gap-1">
                  <%= button_to unlike_performance_path(event), method: :delete, class: "btn btn-heart liked", title: "Unlike" do %>
                    â™¥
                  <% end %>
                </div>
              </div>
              <!-- Event Details -->
              <p class="card-text"><strong>Date:</strong> <%= event.date %></p>
              <p class="card-text"><strong>Time:</strong> <%= event.time %></p>
              <p class="card-text"><strong>Location:</strong> <%= event.location %></p>
              <p class="card-text"><strong>Borough:</strong> <%= event.borough %></p>
              <p class="card-text"><strong>Venue:</strong> <%= event.venue %></p>
              <p class="card-text"><strong>Price:</strong> <%= event.price %></p>
            </div>

            <!-- Card Footer -->
            <div class="card-footer bg-transparent border-top-0 text-center">
              <%= link_to "More Details", details_performance_path(event), class: "btn btn-success w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-white text-center">You haven't liked any events yet.</p>
<% end %>