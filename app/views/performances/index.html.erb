<h2 class="mb-4 text-center">Explore Performances</h2>

<div class="text-center mb-3">
  <%= link_to "Set Preferences", preferences_path, class: "btn btn-warning" %>
</div>

<%= form_tag performances_path, method: :get, id: 'filter_form', local: true do %>
  <div class="mb-3">
    <label class="form-label me-2" for="sort_by">Sort by:</label>
    <%= select_tag :sort_by,
                   options_for_select([["Date", "date"],
                                       ["Price", "price"],
                                       ["Name", "name"]],
                                       @sort_by),
                   id: "sort_by",
                   class: "form-select d-inline w-auto" %>
  </div>

  <%= submit_tag 'Refresh', id: 'filter_submit', class: 'btn btn-primary' %>
<% end %>

<!-- Events Grid -->
<div class="container mt-4">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100" data-event-id="<%= event.id %>">
          
          <!-- Card Body -->
          <div class="card-body">
            <!-- Title + Like/Dislike buttons -->
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h5 class="card-title mb-0"><%= event.name %></h5>
              <div class="d-flex gap-1">
                <%= button_to performances_path(event), method: :post, class: "btn btn-like btn-sm", remote: true do %>
                  <i class="fa fa-heart"></i>
                <% end %>

                <%= button_to performances_path(event), method: :post, class: "btn btn-dislike btn-sm", remote: true do %>
                  <i class="fa fa-heart-broken"></i>
                <% end %>
              </div>
            </div>

            <!-- Event Details -->
            <p class="card-text"><strong>Date:</strong> <%= event.date %></p>
            <p class="card-text"><strong>Time:</strong> <%= event.time %></p>
            <p class="card-text"><strong>Location:</strong> <%= event.location %></p>
            <p class="card-text"><strong>Borough:</strong> <%= event.borough %></p>
            <p class="card-text"><strong>Venue:</strong> <%= event.venue %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(event.price) %></p>
          </div>

          <!-- Card Footer -->
          <div class="card-footer bg-transparent border-top-0 text-center">
            <%= link_to "More Details", details_performance_path(event), class: "btn btn-success w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


