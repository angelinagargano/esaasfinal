<h2 class="mb-4 text-center">Explore Performances</h2>

<div class="text-center mb-3">
  <%= link_to "Set Preferences", preferences_path, class: "btn btn-warning" %>
</div>

<%= form_tag performances_path, method: :get, id: 'filter_form', local: true do %>
  <div class="mb-3">
    <label class="form-label me-2">Filter by Date:</label>
    <div class="d-inline-block">
      <%= date_field_tag :date_filter_start, params[:date_filter_start], 
                         id: "date_filter_start", 
                         class: "form-control d-inline w-auto",
                         placeholder: "Start date" %>
      <span class="mx-2">to</span>
      <%= date_field_tag :date_filter_end, params[:date_filter_end], 
                         id: "date_filter_end", 
                         class: "form-control d-inline w-auto",
                         placeholder: "End date (optional)" %>
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label me-2" for="sort_by">Sort by:</label>
    <%= select_tag :sort_by,
                   options_for_select([["Date", "date"],
                                       ["Price", "price"],
                                       ["Name", "name"]],
                                       @sort_by),
                   id: "sort_by",
                   class: "form-select d-inline w-auto" %>
  </div>

  <%= submit_tag 'Apply Filter', id: 'filter_submit', class: 'btn btn-primary' %>
<% end %>

<!-- Events Grid -->
<div class="container mt-4">
  <% if @events.any? %>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4 mb-4" id="event-<%= event.id %>">
          <div class="card shadow-sm h-100" data-event-id="<%= event.id %>">
            
            <!-- Card Body -->
            <div class="card-body">
              <!-- Title + Like/Dislike buttons -->
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0"><%= event.name %></h5>
                <div class="d-flex gap-1">
                  <% if current_user %>
                    <% if current_user.liked_events.include?(event) %>
                      <%= button_to unlike_performance_path(event), method: :delete, remote: true, class: "btn btn-heart liked", title: "Unlike", id: "like-btn-#{event.id}" do %>
                        ♥
                      <% end %>
                    <% else %>
                      <%= button_to like_performance_path(event), method: :post, remote: true, class: "btn btn-heart", title: "Like", id: "like-btn-#{event.id}" do %>
                        ♡
                      <% end %>
                    <% end %>
                  <% end %>
                  </div>
              </div>
              <!-- Event Details -->
              <p class="card-text"><strong>Date:</strong> <%= event.date %></p>
              <p class="card-text"><strong>Time:</strong> <%= event.time %></p>
              <p class="card-text"><strong>Location:</strong> <%= event.location %></p>
              <p class="card-text"><strong>Price:</strong> <%= event.price %></p>
            </div>

            <!-- Card Footer -->
            <div class="card-footer bg-transparent border-top-0 text-center">
              <%= link_to "More Details", details_performance_path(event), class: "btn btn-success w-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3 class="text-white mb-3">No events matching your preferences</h3>
      <p class="text-white mb-4" style="opacity: 0.8;">Try adjusting your preferences to see more events.</p>
      <%= link_to "Set Preferences", preferences_path, class: "btn btn-warning" %>
    </div>
  <% end %>
</div>

<script>
  const startDateInput = document.getElementById('date_filter_start');
  const endDateInput = document.getElementById('date_filter_end');

  // When start date changes, update the minimum allowed end date
  startDateInput.addEventListener('change', function() {
    if (this.value) {
      endDateInput.min = this.value;
      
      // If end date is already set and is before the new start date, clear it
      if (endDateInput.value && endDateInput.value < this.value) {
        endDateInput.value = '';
      }
    }
  });

  // When end date changes, update the maximum allowed start date
  endDateInput.addEventListener('change', function() {
    if (this.value) {
      startDateInput.max = this.value;
    }
  });

  // Set initial constraints if dates are already filled
  if (startDateInput.value) {
    endDateInput.min = startDateInput.value;
  }
  if (endDateInput.value) {
    startDateInput.max = endDateInput.value;
  }
</script>

