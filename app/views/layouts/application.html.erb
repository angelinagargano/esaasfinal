<%# Our "base" layout should be a valid HTML document. %>
<!DOCTYPE html>
<html>
  <head>
    <title>RHYTMHMIC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', 'media' => 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="dark-theme">
    <%# These classes come from the Bootstrap CSS framework. %>
    <nav class="navbar navbar-expand-lg bg-primary text-white mb-3">
      <%= link_to performances_path do %>
      <%= image_tag "logo.jpg",
        alt: "Logo",
        class: "mr-2",
        style: "height:80px; width:auto;" %>
    <% end %>
    <h1 class="title mb-0">RHYTHMIC</h1>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 sticky-top">
      <div class="container-fluid">
        <% unless logged_in? %>
          <a class="navbar-brand" href="<%= root_path %>">Log In</a>
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Performances", performances_path, class: "nav-link" %>
            </li>
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to "Liked Events", liked_events_performances_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Find A Friend", find_friends_search_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "My Profile", user_profile_path(current_user), class: "nav-link" %>
            
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
            </li>
        </ul>
        <% end %>
        </div>
      </div>
    </nav>
    <div class="container">
      <%# Render "flash" messages in our application. This loads _flash.erb %>
      <%= render 'layouts/flash' %>
      <main id="main">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
