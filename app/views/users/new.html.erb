<h1>Sign up</h1>

<% if flash[:alert].present? %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: signup_path, method: :post, local: true do %>
  <div class="mb-2">
    <%= label_tag :email, 'Email' %><br>
    <%= text_field_tag :email, params[:email], class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= label_tag :name, 'Name' %><br>
    <%= text_field_tag :name, params[:name], class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= label_tag :username, 'Username' %><br>
    <%= text_field_tag :username, params[:username], class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= label_tag :password, 'Password' %><br>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= submit_tag 'Sign up', class: 'btn btn-primary' %>
  </div>
<% end %>
