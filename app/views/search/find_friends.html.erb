<h1>Find Friends</h1>

<%= form_tag find_friends_search_path, method: :get do %>
  <%= text_field_tag :username, params[:username], placeholder: "Enter username" %>
  <%= submit_tag "Search" %>
<% end %>

<% if @users.present? %>
  <h2>Search Results:</h2>
  <ul>
    <% @users.each do |user| %>
      <li><%= user.username %></li>
      <%# You can add a "Add Friend" button or link here %>
    <% end %>
  </ul>
<% elsif params[:username].present? %>
  <p>No users found with that username.</p>
<% end %>